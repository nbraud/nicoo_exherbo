require github [ user=mtoyoda ]

SUMMARY="SL (Steam Locomotive) runs across your terminal when you type 'sl' as you meant to type 'ls'."
SLOT="0"

src_prepare() {
    default
    edo sed -r -e '/^(CC|CFLAGS)=/d' -i Makefile
}

src_install() {
    insinto /usr/$(exhost --target)/bin
    dobin sl
    doman sl.1
    emagicdocs
}

