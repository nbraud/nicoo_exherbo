require github [ user=davvil suffix=tgz ] cmake

HOMEPAGE="http://davvil.github.com/pdfpc/"
SUMMARY="GTK-based presentation viewer, with Keynote-like multi-monitor output to provide meta-information to the speaker"

LICENCES="GPL-2"
SLOT="0"
MYOPTIONS=""

DEPENDENCIES="
    build+run:
      app-text/poppler[glib]
      base/libgee
      dev-libs/glib:2
      gnome-desktop/librsvg:2
      x11-libs/gtk+:2

    build:
      dev-util/pkg-config
      dev-lang/vala:*[>=0.11]
"

