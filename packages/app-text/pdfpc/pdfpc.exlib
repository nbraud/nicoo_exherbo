require github [ user=davvil suffix=tgz ] cmake

HOMEPAGE="http://davvil.github.com/pdfpc/"
SUMMARY="GTK-based presentation viewer, with multi-screen support."
DESCRIPTION="
pdfpc is a GTK based presentation viewer application for GNU/Linux which uses multi-monitor output to provide meta information to the speaker during the presentation.
"

LICENCES="GPL-2"
SLOT="0"
MYOPTIONS=""

DEPENDENCIES="
    build:
      dev-util/pkg-config
      dev-lang/vala:*[>=0.11]

    build+run:
      app-text/poppler[glib]
      base/libgee
      dev-libs/glib:2
      gnome-desktop/librsvg:2
      x11-libs/gtk+:2
"

